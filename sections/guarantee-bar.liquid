<!-- CarKit Feature Callouts Section (light grey background) -->
<section style="background: #f5f7f8; padding: 48px 0;">
  <div style="max-width: 1280px; margin: 0 auto; padding: 0 24px;">
    <div style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 0;">
      {% for block in section.blocks %}
        {% if block.type == 'guarantee' %}
          <div style="display: flex; align-items: center; justify-content: center; gap: 16px; padding: 24px 32px; {% unless forloop.last %}border-right: 1px solid #e2e8f0;{% endunless %}">
            <span class="material-symbols-outlined" style="font-size: 40px; color: #0d7ff2;">{{ block.settings.icon }}</span>
            <div>
              <p style="font-size: 15px; font-weight: 700; color: #111418; margin-bottom: 4px;">{{ block.settings.title }}</p>
              <p style="font-size: 14px; color: #64748b;">{{ block.settings.subtitle }}</p>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Guarantee Bar",
  "blocks": [
    {
      "type": "guarantee",
      "name": "Guarantee",
      "settings": [
        { "type": "text", "id": "icon", "label": "Material Icon", "default": "verified_user" },
        { "type": "text", "id": "title", "label": "Title", "default": "Verified Authenticity" },
        { "type": "text", "id": "subtitle", "label": "Subtitle", "default": "100% Genuine Parts" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Guarantee Bar",
      "blocks": [
        { "type": "guarantee", "settings": { "icon": "verified_user", "title": "Verified Authenticity", "subtitle": "100% Genuine Parts" } },
        { "type": "guarantee", "settings": { "icon": "handyman", "title": "Guaranteed Fitment", "subtitle": "Fits your car or money back" } },
        { "type": "guarantee", "settings": { "icon": "local_shipping", "title": "Fast Delivery", "subtitle": "Free shipping on orders $200+" } }
      ]
    }
  ]
}
{% endschema %}
