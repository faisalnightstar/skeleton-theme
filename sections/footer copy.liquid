{
  "name": "Footer",
  "settings": [
    { "type": "text", "id": "logo_text", "label": "Logo Text", "default": "CarKit" },
    { "type": "textarea", "id": "description", "label": "Description", "default": "Premium verified car accessories and parts. Every product tested for perfect fitment." },
    { "type": "text", "id": "copyright", "label": "Copyright", "default": "Â© 2024 CarKit Inc. All rights reserved." }
  ],
  "blocks": [
    { "type": "shop_link", "name": "Shop Link", "settings": [
      { "type": "text", "id": "label", "label": "Label", "default": "Link" },
      { "type": "url", "id": "url", "label": "URL" }
    ]},
    { "type": "support_link", "name": "Support Link", "settings": [
