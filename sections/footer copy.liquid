      { "type": "text", "id": "label", "label": "Label", "default": "Link" },
      { "type": "url", "id": "url", "label": "URL" }
    ]}
  ],
  "presets": [
    {
      "name": "Footer",
      "blocks": [
        { "type": "shop_link", "settings": { "label": "All Accessories" } },
        { "type": "shop_link", "settings": { "label": "New Arrivals" } },
        { "type": "shop_link", "settings": { "label": "Featured Brands" } },
        { "type": "shop_link", "settings": { "label": "Gift Cards" } },
        { "type": "support_link", "settings": { "label": "Help Center" } },
        { "type": "support_link", "settings": { "label": "Fitment Guarantee" } },
        { "type": "support_link", "settings": { "label": "Returns & Exchanges" } },
        { "type": "support_link", "settings": { "label": "Contact Us" } },
        { "type": "about_link", "settings": { "label": "Our Story" } },
        { "type": "about_link", "settings": { "label": "Careers" } },
        { "type": "about_link", "settings": { "label": "Press" } },
        { "type": "about_link", "settings": { "label": "Privacy Policy" } }
      ]
    }
  ]
}
{% endschema %}
